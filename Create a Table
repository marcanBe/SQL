CREATE TABLE friends (
   id INTEGER,
   name TEXT,
   birthday DATE
);

INSERT INTO friends (id, name, birthday) 
VALUES (1, 'Ororo Monroe', 1940-03-30);
INSERT INTO friends(id, name, birthday)  
VALUES (2, 'Logan', 1949-6-30);
INSERT INTO friends(id, name, birthday) 
VALUES (3, 'Jean Grey', 1985-03-30);


UPDATE friends
SET name = 'Storm'
WHERE id = 1;

ALTER TABLE friends
ADD COLUMN  email TEXT;
UPDATE friends 
SET email = 'storm@codecademy.com'
where id = 1;
DELETE FROM friends
WHERE id = 1;

SELECT * FROM friends;
